<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionnaireDeBudgetPersonnel.Utilisateur.UtilisateurController">

    <!-- ðŸŒŸ TITRE -->
    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Gestion d'un Utilisateur" />

    <!-- ðŸ”¹ ID + RÃ´le -->
    <GridPane hgap="15" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="ID :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="champId" promptText="Identifiant de l'utilisateur" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="RÃ´le :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="champRole" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>


    <!-- ============================
          TABLEAU DES COMPTES
         ============================ -->
    <TitledPane expanded="false" style="-fx-background-color: #067511;" text="Comptes">
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button onAction="#ajouterCompte" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="+ Ajouter un compte" />

            <TableView fx:id="tableComptes">
                <columns>
                    <TableColumn text="ID" />
                    <TableColumn text="Solde" />
                    <TableColumn text="Type" />
                    <TableColumn text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </TitledPane>


    <!-- ============================
          TABLEAU DES BUDGETS
         ============================ -->
    <TitledPane expanded="false" text="Budgets">
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button onAction="#ajouterBudget" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="+ Ajouter un budget" />

            <TableView fx:id="tableBudgets">
                <columns>
                    <TableColumn text="ID" />
                    <TableColumn text="CatÃ©gorie" />
                    <TableColumn text="Montant Limite" />
                    <TableColumn text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </TitledPane>


    <!-- ============================
          TABLEAU DES OBJECTIFS
         ============================ -->
    <TitledPane expanded="true" text="Objectifs">
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button onAction="#ajouterObjectif" style="-fx-background-color: #067511; -fx-text-fill: white;" text="+ Ajouter un objectif" />

            <TableView fx:id="tableObjectifs">
                <columns>
                    <TableColumn text="ID" />
                    <TableColumn text="Type" />
                    <TableColumn text="Montant" />
                    <TableColumn text="Statut" />
                    <TableColumn text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </TitledPane>


    <!-- ðŸ”˜ BOUTONS Dâ€™ACTION -->
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#enregistrerUtilisateur" style="-fx-background-color: #067511; -fx-text-fill: white;" text="Enregistrer" />
        <Button onAction="#annuler" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Annuler" />
    </HBox>

</VBox>
