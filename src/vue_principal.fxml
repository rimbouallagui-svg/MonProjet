<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.DashboardController">

    <left>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button onAction="#afficherDashboard" text="Tableau de bord" />
            <Button onAction="#afficherTransactions" text="Transactions" />
            <Button onAction="#afficherObjectifs" text="Objectifs" />
            <Button onAction="#afficherFamille" text="Budget familial" />
            <Button onAction="#afficherRapports" text="Rapports" />
            <MenuBar>
                <Menu text="Fichier">
                    <MenuItem text="Nouveau Budget" />
                    <MenuItem text="Exporter" />
                    <MenuItem text="Quitter" />
                </Menu>
                <Menu text="Vue">
                    <MenuItem text="Tableau de bord" />
                    <MenuItem text="Transactions" />
                    <MenuItem text="Objectifs" />
                </Menu>
            </MenuBar>
        </VBox>
    </left>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <HBox spacing="20">
                <VBox style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-border-radius: 5;">
                    <Label style="-fx-font-weight: bold;" text="Solde actuel" />
                    <Label fx:id="labelSolde" style="-fx-font-size: 24; -fx-text-fill: #2ecc71;" text="0.00 €" />
                </VBox>

                <VBox style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-border-radius: 5;">
                    <Label style="-fx-font-weight: bold;" text="Revenus mensuels" />
                    <Label fx:id="labelRevenus" style="-fx-font-size: 18; -fx-text-fill: #27ae60;" text="0.00 €" />
                </VBox>

                <VBox style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-border-radius: 5;">
                    <Label style="-fx-font-weight: bold;" text="Dépenses mensuelles" />
                    <Label fx:id="labelDepenses" style="-fx-font-size: 18; -fx-text-fill: #c0392b;" text="0.00 €" />
                </VBox>
            </HBox>

            <PieChart fx:id="chartDepenses" title="Répartition des dépenses" />

            <VBox>
                <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Objectifs en cours" />
                <TableView fx:id="tableObjectifs">
                    <columns>
                        <TableColumn text="Nom" />
                        <TableColumn text="Progression" />
                        <TableColumn text="Date cible" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
